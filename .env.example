# mysql 데이터베이스 설정
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/website_db
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
UPLOAD_DIR=static/uploads
MAX_UPLOAD_SIZE=5242880

# openai api 키
OPENAI_API_KEY=your-actual-api-key-here
BUY_ME_A_COFFEE_LINK=https://www.buymeacoffee.com/yourname

# Ollama 설정
OLLAMA_URL="http://127.0.0.1/23884s"  # ollama 서버 주소
MODEL_NAME="gemma3:27b-it-q8_0"  # 사용할 모델명
BATCH_SIZE=10  # 한 번에 처리할 레코드 수
DELAY_BETWEEN_REQUESTS=2  # 요청 간 지연 시간 (초)

# 카카오페이 설정
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_CID=TC0ONETIME

# 이메일 발송 설정 (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Celery 설정
CELERY_BROKER_URL=redis://localhost:6379/0

# 결제 성공/실패 리다이렉트 URL (도메인 변경 필요)
SITE_URL=http://localhost:8000
